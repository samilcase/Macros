dir = getDirectory("image"); 
  name= "STD_img_Speckle Stim"; 
  path = dir+name;
selectWindow("STD_img_Speckle.tif");
saveAs("Tiff", path);
selectWindow(NameofFile);
run("Z Project...", "start=StimStart stop=StimEnd projection=[Average Intensity]");
